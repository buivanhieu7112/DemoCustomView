<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeader"
    android:padding="@dimen/dp_15">

    <ImageButton
        android:id="@+id/demoViewButtonArrowDropDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_drop_down"
        app:layout_constraintBottom_toBottomOf="@id/demoViewEditText"
        app:layout_constraintEnd_toStartOf="@id/demoViewEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/demoViewEditText" />

    <EditText
        android:id="@+id/demoViewEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:background="@drawable/border_edit_text"
        android:maxLength="40"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_5"
        android:textColor="@android:color/white"
        android:textColorHint="#bbb2b2"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/demoViewButtonRecord"
        app:layout_constraintStart_toEndOf="@id/demoViewButtonArrowDropDown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <ImageButton
        android:id="@+id/demoViewButtonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_record"
        app:layout_constraintBottom_toBottomOf="@id/demoViewEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/demoViewEditText"
        app:layout_constraintTop_toTopOf="@id/demoViewEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>
